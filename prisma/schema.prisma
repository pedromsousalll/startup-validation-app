datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Mantenha seus modelos como est√£o
model Idea {
  id          Int      @id @default(autoincrement())
  title       String
  description String
}

model User {
  id            Int      @id @default(autoincrement())
  name          String?
  email         String   @unique
  password      String
  emailVerified DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

